<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/place_filter_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:padding="10dp"
        android:text="@string/place_filter" android:textSize="20sp" />

    <Button
        android:id="@+id/findSelected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/place_filter_text"
        android:text="Find Place Types that are Selected" />

    <ListView
        android:id="@+id/FilterList"
        android:layout_below="@+id/findSelected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>